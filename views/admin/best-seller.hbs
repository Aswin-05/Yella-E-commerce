<section>
    <div class="container">
        <table class="table mt-5" id="productstable" style="width: 100%;">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Key Features</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">#</th>
                    <td style="width: 250px;">{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td style="width: 200px;">
                        {{#each this.key_features}}
                        <li>{{this}}</li>
                        {{/each}}
                    </td>
                    <td style="width: 300px;">{{this.description}}</td>
                    <td style="width: 80px;"><img style="width: 50px;height: 50px;"
                            src="/images/product/{{this.category}}/{{this._id}}/0.jpg" alt="" />
                        <img style="width: 50px;height: 50px;" src="/images/product/{{this.category}}/{{this._id}}/1.jpg"
                            alt="" />
                        <img style="width: 50px;height: 50px;" src="/images/product/{{this.category}}/{{this._id}}/2.jpg"
                            alt="" />
                        <img style="width: 50px;height: 50px;" src="/images/product/{{this.category}}/{{this._id}}/3.jpg"
                            alt="" />
                        <img style="width: 50px;height: 50px;" src="/images/product/{{this.category}}/{{this._id}}/4.jpg"
                            alt="" />
                    </td>
                    <td style="width: 80px;">
                        <a href="/admin/remove-product-bestseller/{{this._id}}" class="btn btn-outline-danger btn-sm mt-3"
                            onclick="return confirm('Want to remove form best sellers {{this.name}}?')">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>


<script>
    new DataTable('#productstable', {
        autoWidth: false,
        columnDefs: [
            {
                targets: ['_all'],
                className: 'mdc-data-table__cell',
            },
        ],
    });
</script>