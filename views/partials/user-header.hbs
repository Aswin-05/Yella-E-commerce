<style>
    .error {
        color: rgb(255, 107, 102);
    }

    .login-signup {
        color: #a4a4a4 !important;
        transition: 0.3s ease-in-out !important;
    }

    .login-signup:hover {
        color: #fed700 !important;
        cursor: pointer !important;
    }

    .login-signup:focus,
    .login-signup:hover {
        color: #ffffff !important;
        text-decoration: none !important;
    }

    .hover:hover {
        color: #fed700 !important;
    }
</style>
<!-- Begin Header Area -->
<header>
    <!-- Begin Header Top Area -->
    <div class="header-top">
        <div class="container">
            <div class="row">
                <!-- Begin Header Top Left Area -->
                <div class="col-lg-3 col-md-4">
                    <div class="header-top-left">
                        <ul class="phone-wrap">
                            <li style="cursor: default;"><span>Telephone Enquiry:</span><a href="#"
                                    style="cursor: default;"> (+844) 223-6679</a></li>
                        </ul>
                    </div>
                </div>
                <!-- Header Top Left Area End Here -->
                <!-- Begin Header Top Right Area -->
                <div class="col-lg-9 col-md-8">
                    <div class="header-top-right">
                        <ul class="ht-menu">
                            <!-- Begin Setting Area -->
                            {{#if user}}
                            <li>
                                <div class="ht-setting-trigger"><span>Hello, {{user.fname}}</span></div>
                                <div class="setting ht-setting">
                                    <ul class="ht-setting-list ">
                                        <li><a href="/my-account">My Profile</a></li>
                                        <li><a class="login-signup" onclick="logout()">Logout</a></li>
                                    </ul>
                                </div>
                            </li>
                            {{else}}
                            <li>
                                <div class="ht-setting-trigger"><span id="username">My Account</span></div>
                                <div class="setting ht-setting">
                                    <ul class="ht-setting-list">
                                        <li><a title="quick view" class="quick-view-btn login-signup" id="" {{!--
                                                data-toggle="modal" data-target="#login" --}}
                                                onclick="openLoginModal()">Log In</a></li>
                                        <li><a title="quick view" class="quick-view-btn login-signup" {{!--
                                                data-toggle="modal" data-target="#signup" --}}
                                                onclick="openSignupModal()">Sign Up</a></li>
                                    </ul>
                                </div>
                            </li>
                            {{/if}}
                            <!-- Setting Area End Here -->
                            <!-- Begin Currency Area -->
                            <li style="cursor: default;">
                                <span class="currency-selector-wrapper">Currency :</span>
                                <div class="ht-currency-trigger"><span>INR ₹</span></div>
                            </li>
                            <!-- Currency Area End Here -->
                            <!-- Begin Language Area -->
                            <li style="cursor: default;">
                                <span class="language-selector-wrapper">Language :</span>
                                <div class="ht-language-trigger"><span>English</span></div>
                            </li>
                            <!-- Language Area End Here -->
                            <!-- Begin FAQ Area -->
                            <li style="cursor: default;">
                                <span class="language-selector-wrapper cursor hover"><a class="cursor hover" href="/faq"
                                        style="color: #242424;">FAQ</a></span>
                            </li>
                            <!-- FAQ Area End Here -->
                            <!-- Begin Contact Area -->
                            <li style="cursor: default;">
                                <span class="language-selector-wrapper"><a class="cursor hover" href="/contact"
                                        style="color: #242424;">Contact</a></span>
                            </li>
                            <!-- contact Area End Here -->
                        </ul>
                    </div>
                </div>
                <!-- Header Top Right Area End Here -->
            </div>
        </div>
    </div>
    <!-- Header Top Area End Here -->
    <!-- Begin Header Middle Area -->
    <div class="header-middle pl-sm-0 pr-sm-0 pl-xs-0 pr-xs-0">
        <div class="container">
            <div class="row">
                <!-- Begin Header Logo Area -->
                <div class="col-lg-3">
                    <div class="logo pb-sm-30 pb-xs-30">
                        <a href="/">
                            <img src="/images/menu/logo/2.png" alt="" />
                        </a>
                    </div>
                </div>
                <!-- Header Logo Area End Here -->
                <!-- Begin Header Middle Right Area -->
                <div class="col-lg-9 pl-0 ml-sm-15 ml-xs-15">
                    <!-- Begin Header Middle Searchbox Area -->
                    <form onsubmit="searchProducts(event)" class="hm-searchbox" id="search">
                        <select name="category" class="nice-select select-search-category">
                            {{#if search}}
                            <option value="{{search.category}}">{{search.category}}</option>
                            {{else}}
                            <option value="" disabled selected>All</option>
                            {{/if}}
                            {{#unlessCond search.category '===' 'all'}}
                            <option value="all">All</option>
                            {{/unlessCond}}
                            {{#unlessCond search.category '===' 'laptop'}}
                            <option value="laptop">Laptop</option>
                            {{/unlessCond}}
                            {{#unlessCond search.category '===' 'mobile'}}
                            <option value="mobile">Mobile</option>
                            {{/unlessCond}}
                            {{#unlessCond search.category '===' 'tv & audio'}}
                            <option value="tv & audio">Tv & Audio</option>
                            {{/unlessCond}}
                            {{#unlessCond search.category '===' 'cosmetics'}}
                            <option value="cosmetics">Cosmetics</option>
                            {{/unlessCond}}
                            {{#unlessCond search.category '===' 'smart devices'}}
                            <option value="smart devices">Smart Devices</option>
                            {{/unlessCond}}
                        </select>

                        <input type="text" placeholder="Enter your search key ..." name="search"
                            value="{{search.search}}" />
                        <button class="li-btn" type="submit"><i class="fa fa-search"></i></button>
                    </form>
                    <!-- Header Middle Searchbox Area End Here -->
                    <!-- Begin Header Middle Right Area -->
                    <div class="header-middle-right">
                        <ul class="hm-menu">
                            <!-- Begin Header Middle Wishlist Area -->
                            <li class="hm-wishlist">
                                <a href="/wishlist" style="margin-left: 1px !important;">
                                    <span class="cart-item-count wishlist-item-count"
                                        id="count-list">{{listCount}}</span>
                                    <i class="fa fa-heart-o" style="color: red;"></i>
                                </a>
                            </li>
                            <!-- Header Middle Wishlist Area End Here -->
                            <!-- Begin Header Mini Cart Area -->
                            <li class="hm-minicart">
                                <div class="hm-minicart-trigger">
                                    <span class="item-icon"></span>
                                    {{#if user}}
                                    <span class="item-text">₹ <span id="cart-amount">{{totalAmount}}</span>
                                        <span class="cart-item-count" id="count-cart">{{cartCount}}</span>
                                    </span>
                                    {{else}}
                                    <span class="item-text">₹ <span>0.00</span>
                                        <span class="cart-item-count">{{cartCount}}</span>
                                    </span>
                                    {{/if}}
                                </div>
                                <span></span>
                                <div class="minicart">
                                    <ul class="minicart-product-list" id="minicart">
                                        {{#each miniCart}}
                                        <li>
                                            <a href="#" class="minicart-product-image">
                                                <img src="/images/product/{{this.category}}/{{this._id}}/0.jpg"
                                                    alt="cart products" />
                                            </a>
                                            <div class="minicart-product-details">
                                                <h6><a href="#">{{this.name}}</a></h6>
                                                <span>₹ {{this.price}} x {{this.quantity}}</span>
                                            </div>
                                            <button class="close" title="Remove">
                                                <i class="fa fa-trash"
                                                    onclick="removeCartItem('{{../user._id}}','{{this._id}}')"></i>
                                            </button>
                                        </li>
                                        {{/each}}
                                    </ul>

                                    <p class="minicart-total">SUBTOTAL:
                                        {{#if user}}
                                        <span>₹ <span id="cart-amount2"> {{totalAmount}}</span></span>
                                    </p>
                                    {{else}}
                                    <span>₹ 0.00</span></p>
                                    {{/if}}
                                    <div class="minicart-button">
                                        <a href="/shopping-cart" class="li-button li-button-fullwidth li-button-dark">
                                            <span>View Full Cart</span>
                                        </a>
                                        <a href="/checkout" class="li-button li-button-fullwidth">
                                            <span>Checkout</span>
                                        </a>
                                    </div>
                                </div>
                            </li>
                            <!-- Header Mini Cart Area End Here -->
                        </ul>
                    </div>
                    <!-- Header Middle Right Area End Here -->
                </div>
                <!-- Header Middle Right Area End Here -->
            </div>
        </div>
    </div>
    <!-- Header Middle Area End Here -->
    <!-- Begin Header Bottom Area -->
    <div class="header-bottom mb-0 header-sticky stick d-none d-lg-block d-xl-block">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Begin Header Bottom Menu Area -->
                    <div class="hb-menu">
                        <nav>
                            <ul>
                                <li><a href="/">Home</a>
                                </li>
                                <li class="megamenu-holder"><a href="/shop/laptop">Laptops</a>
                                </li>
                                <li class="megamenu-holder"><a href="/shop/mobile">Mobiles</a>
                                </li>
                                <li class="megamenu-holder"><a href="/shop/cosmetics">Cosmetics</a>
                                </li>
                                <li class="megamenu-holder"><a href="/shop/tv & audio">Tv & Audio</a>
                                </li>
                                <li class="megamenu-holder"><a href="/shop/smart device">Smart Devices</a>
                                </li>
                            </ul>
                    </div>
                    <!-- Header Bottom Menu Area End Here -->
                </div>
            </div>
        </div>
    </div>
    <!-- Header Bottom Area End Here -->
    <!-- Begin Mobile Menu Area -->
    <div class="mobile-menu-area d-lg-none d-xl-none col-12">
        <div class="container">
            <div class="row">
                <div class="mobile-menu">
                </div>
            </div>
        </div>
    </div>
    <!-- Mobile Menu Area End Here -->
</header>
<!-- Header Area End Here -->

<!-- Begin Quick View | Modal Area for login-->
<div class="modal fade modal-wrapper" id="login">
    <div class="modal-dialog modal-dialog-centered" role="document" style="z-index: 999;">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="modal-inner-area row">
                    <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30" style="margin-top: 20px;">
                        <!-- Login Form s-->
                        <form accept="/submit" method="post" id="log-in">
                            <div class="login-form">
                                <h4 class="login-title">Login</h4>
                                <div class="row">
                                    <div class="col-md-12 col-12 mb-20">
                                        <label>Email Address </label>
                                        <input class="mb-0" type="email" placeholder="Email Address" name="login_email"
                                            id="login_email" />
                                    </div>
                                    <div class="col-12 mb-20">
                                        <label>Password</label>
                                        <input class="mb-0" type="password" placeholder="Password" name="login_password"
                                            id="login_password" />
                                    </div>
                                    <div class="col-md-6">
                                        <div class="check-box d-inline-block ml-0 ml-md-2 mt-10">
                                            <input type="checkbox" id="remember_me" />
                                            <label for="remember_me">Remember me</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mt-10 mb-20 text-left">
                                        <a href="#"> Forgot password?</a>
                                    </div>
                                    <div class="col-md-12">
                                        <button class="register-button mt-0" onclick="login()">Login</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30" style="margin-top: 20px;">
                        <div class="login-form" style="padding: 0; height: 397px;">
                            <img src="/images/modal/login-page.jpg" alt="" style="width: 100%;height: 100%;" />
                        </div>
                    </div>
                </div>
                <p id="errMsg" class="text-center"></p>
            </div>
        </div>
    </div>
</div>
<!-- Quick View | Modal Area for login End Here -->

<!-- Begin Quick View | Modal Area for signup-->
<div class="modal fade modal-wrapper" id="signup">
    <div class="modal-dialog modal-dialog-centered" role="document" style="z-index: 999;">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="modal-inner-area row">
                    <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30" style="margin-top: 20px;">
                        <!-- signup Form -->
                        <form action="/submit" method="post" id="sign-up">
                            <div class="login-form">
                                <h4 class="login-title">Register</h4>
                                <div class="row">
                                    <div class="col-md-6 col-12 mb-20">
                                        <label>First Name</label>
                                        <input class="mb-0" type="text" placeholder="First Name" name="fname"
                                            id="fname" />
                                    </div>
                                    <div class="col-md-6 col-12 mb-20">
                                        <label>Last Name</label>
                                        <input class="mb-0" type="text" placeholder="Last Name" name="lname"
                                            id="lname" />
                                    </div>
                                    <div class="col-md-12 mb-20">
                                        <label>Email Address</label>
                                        <input class="mb-0" type="email" placeholder="Email Address" name="email"
                                            id="email" />
                                    </div>
                                    <div class="col-md-6 mb-20">
                                        <label>Password</label>
                                        <input class="mb-0" type="password" placeholder="Password" name="password"
                                            id="password" />
                                    </div>
                                    <div class="col-md-6 mb-20">
                                        <label>Confirm Password</label>
                                        <input class="mb-0" type="password" placeholder="Confirm Password"
                                            name="password_confirm" id="password_confirm" />
                                    </div>
                                    <div class="col-md-8 mt-10 mb-20 text-left">
                                        <a class="wish" onclick="openLoginModal()"> Already have an account?</a>
                                    </div>
                                    <div class="col-12">
                                        <button class="register-button mt-0" onclick="signup()">Register</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30" style="margin-top: 20px;">
                        <div class="login-form" style="padding: 0; height: 495px;">
                            <img src="/images/modal/login-page.jpg" alt="" style="width: 100%;height: 100%;" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Quick View | Modal Area for signup End Here -->